<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="exercicios.CalcularFatorialDeUmNumero">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Calcular o fatorial de m número" HorizontalOptions="Center" FontSize="Large"/>
            <StackLayout Orientation="Horizontal">
                <Entry x:Name="eNumero" Keyboard="Numeric" Placeholder="Informe um número" HorizontalOptions="FillAndExpand"/>
                <Button x:Name="btExecutar" Text="Executar" Clicked="BtExecutar_Clicked"/>
            </StackLayout>
            <Label x:Name="lResposta" Text="Resposta" HorizontalOptions="Center" FontSize="Large"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>