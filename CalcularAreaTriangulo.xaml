<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="exercicios.CalcularAreaTriangulo">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Calcular a área do triângulo" HorizontalOptions="Center" FontSize="Large"/>
            <Entry x:Name="eBase" Keyboard="Numeric" Placeholder="Informe o valor da base do triângulo"/>
            <Entry x:Name="eAltura" Keyboard="Numeric" Placeholder="Informe o valor da altura do triângulo"/>
            <Button x:Name="btExecutar" Text="Calcular" Clicked="BtExecutar_Clicked"/>
            <Label x:Name="lTotal" Text="Resposta" HorizontalOptions="Center" FontSize="Large"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>